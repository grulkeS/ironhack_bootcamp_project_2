<header>
  <div class="keep-clear"></div>

  <div class="icon-bar">

    {{#if session}}
    <div class="icon">
      <a href="/manageusers"><img src="/images/settings.svg"></a>
    </div>

    <div class="icon">
      <a href="/search"><img src="/images/search.svg"></a>
    </div>


    <div class="icon whoami">
      <img src="/images/user.svg"><br>
      {{session.name}}
    </div>

    <div class="icon">
      <a href="/logout"><img src="/images/sign-out.svg"></a>
    </div>
    {{/if}}

  </div>

  {{#if errorMessage}}
  <div class="container messages"> {{errorMessage}} </div>
  {{/if}}

  <p>Request stocks for online, store and wholesale!</p>
</header>

<section class="main-login">
  {{#unless session}}

  <form action="/" class="login container" method="POST">
    <h2>Login</h2>
    <div class="single-input">
      <input type="text" placeholder="name" name="username" required>
    </div>
    <div class="single-input">
      <input type="password" placeholder="password" name="password" required>
    </div>
    <a href="/search"><button type="submit" class="button-sign">Go!</button></a>
  </form>

  <form action="/register" class="login container" method="POST">
    <h2>Register</h2>
    <div class="single-input">
      <input type="text" placeholder="name" name="userNameToReg" required>
    </div>
    <div class="single-input">
      <input type="password" placeholder="password" name="passwordToReg" required>
    </div>
    <a href="/register"><button type="submit" class="button-sign">Go!</button></a>
  </form>

  {{/unless}}
</section>